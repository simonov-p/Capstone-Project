<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/list_item_logo_away_team"
        android:layout_width="@dimen/widget_logo_size"
        android:layout_height="@dimen/widget_logo_size"
        android:layout_gravity="center"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/list_item_score_away_team"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/middle_text_size" />

    <TextView
        android:id="@+id/list_item_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="@dimen/middle_offset"
        android:text="@string/default_text"
        android:textSize="@dimen/middle_text_size" />

    <TextView
        android:id="@+id/list_item_score_home_team"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/middle_text_size" />

    <ImageView
        android:id="@+id/list_item_logo_home_team"
        android:layout_width="@dimen/widget_logo_size"
        android:layout_height="@dimen/widget_logo_size"
        android:layout_gravity="center"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher" />
</LinearLayout>